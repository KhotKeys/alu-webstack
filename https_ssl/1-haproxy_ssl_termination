global
    daemon
    maxconn 256

defaults
    mode http
    timeout connect 5000ms
    timeout client 50000ms
    timeout server 50000ms

frontend http-in
    bind *:80
    bind *:443 ssl crt /etc/letsencrypt/live/www.khotkeys.tech/fullchain.pem
    mode http
    default_backend web-backend

backend web-backend
    balance roundrobin
    server web-01 52.55.168.213:80 check
    server web-02 54.208.120.117:80 check


frontend https_frontend
    bind *:443 ssl crt /etc/letsencrypt/live/www.khotkeys.tech/fullchain.pem
    mode http
    default_backend web-backend